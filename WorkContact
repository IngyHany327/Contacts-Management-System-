public class WorkContact extends Contact {
    private String jobTitle;
    private String company;
    private String department;

    public WorkContact(String name, String phoneNumber, String email, String address, String jobTitle, String company, String department) {
        super(name, phoneNumber, email, address);
        this.jobTitle = jobTitle;
        this.company = company;
        this.department = department;
    }

    public String getJobTitle() {
        return jobTitle;
    }

    public String getCompany() {
        return company;
    }

    public String getDepartment() {
        return department;
    }

    @Override
    public String toString() {
        return super.toString() + ", Job Title: " + jobTitle + ", Company: " + company + ", Department: " + department;
    }
}
